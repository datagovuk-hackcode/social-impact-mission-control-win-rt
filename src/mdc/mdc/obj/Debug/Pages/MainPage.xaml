<Page
    x:Class="mdc.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:mdc"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
	<Grid Background="Black">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="120"/>
			<ColumnDefinition Width="100"/>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="10"/>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="10"/>
			<ColumnDefinition Width="100"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="100"/>
			<RowDefinition Height="10"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="10"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="10"/>
			<RowDefinition Height="100"/>
		</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="0"
                    x:Name="QueryPanel"
					Visibility="Visible">
			<TextBlock Text="I want information on: " FontFamily="Segoe UI Light" FontSize="40"
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="Gray" Margin="0,0,0,3" />
			<TextBox x:ConnectionId='0' Text="" FontFamily="Segoe UI Light" FontSize="40" HorizontalAlignment="Center"
                     VerticalAlignment="Bottom" Foreground="White" Background="Transparent" BorderThickness="0"
                     x:Name="CompanyFor"                                />
		</StackPanel>
		<ScrollViewer Grid.Column="2" Grid.Row="2" Grid.RowSpan="3"
                          VerticalScrollMode="Enabled"
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollMode="Disabled" BorderBrush="LightGray" BorderThickness="0">
			<ListView x:Name="ResultItemsControl"
					  IsTapEnabled="False"
					  IsRightTapEnabled="False"
					  IsHitTestVisible="True"
					  IsHoldingEnabled="False"
					  IsDoubleTapEnabled="False"
					  ItemsSource="{Binding}">
				<ListView.ItemTemplate> 
					<DataTemplate>
						<StackPanel>
							<StackPanel Orientation="Vertical">
								<TextBlock Text="company_name" FontSize="12" TextWrapping="Wrap" Foreground="White"/>
								<TextBlock Text="{Binding company_name}" FontSize="15" TextWrapping="Wrap" Foreground="White" Margin="20,0,0,0" />
							</StackPanel>
							<StackPanel Orientation="Vertical">
								<TextBlock Text="mission_statement" FontSize="12" TextWrapping="Wrap" Foreground="White"/>
								<TextBlock Text="{Binding mission_statement}" FontSize="15" TextWrapping="Wrap" Foreground="White" Margin="20,0,0,0" />
							</StackPanel>
							<StackPanel Orientation="Vertical">
								<TextBlock Text="mission_statement_proof" FontSize="12" TextWrapping="Wrap" Foreground="White"/>
								<TextBlock Text="{Binding mission_statement_proof}" FontSize="15" TextWrapping="Wrap" Foreground="White" Margin="20,0,0,0" />
							</StackPanel>
							<StackPanel Orientation="Vertical">
								<TextBlock Text="mission_statement_inevestigator" FontSize="15" TextWrapping="Wrap" Foreground="White"/>
								<TextBlock Text="{Binding mission_statement_investigator}" FontSize="20" TextWrapping="Wrap" Foreground="White" Margin="20,0,0,0" />
							</StackPanel>
						</StackPanel>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</ScrollViewer>
		<ScrollViewer Grid.Column="4" Grid.Row="2"
                          VerticalScrollMode="Enabled"
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollMode="Disabled" BorderBrush="LightGray" BorderThickness="0">
			<TextBlock x:Name="TextBlockDump" TextWrapping="Wrap" />
		</ScrollViewer>
		<ScrollViewer Grid.Column="4" Grid.Row="4"
                          VerticalScrollMode="Enabled"
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollMode="Disabled" BorderBrush="LightGray" BorderThickness="0">
		</ScrollViewer>
		</Grid>
</Page>

