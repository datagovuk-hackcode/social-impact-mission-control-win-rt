<Page
    x:Class="mdc.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:mdc"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
	<Grid Background="DarkGray">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="120"/>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="120"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="100"/>
			<RowDefinition Height="25"/>
			<RowDefinition Height="2*"/>
			<RowDefinition Height="25"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="25"/>
		</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2"
                    x:Name="QueryPanel"
					Visibility="Visible">
			<TextBlock Text="I want information on: " FontSize="48"
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="White" Margin="0,0,0,3"/>
			<TextBox x:ConnectionId='1' Text="" FontSize="40" HorizontalAlignment="Center"
                     VerticalAlignment="Bottom" Foreground="White" Background="Transparent" BorderThickness="0"
                     x:Name="CompanyFor"                                />
		</StackPanel>
		<GridView x:Name="ResultItemsControl"  Grid.Column="1" Grid.Row="2"
					  IsTapEnabled="False"
					  IsRightTapEnabled="False"
					  IsHitTestVisible="True"
					  IsHoldingEnabled="False"
					  IsDoubleTapEnabled="False"
					  ItemsSource="{Binding}">
			<GridView.ItemTemplate>
				<DataTemplate>
					<Grid Background="Silver" Margin="2,0,2,2" Width="800">
						<StackPanel Margin="10">
							<StackPanel Orientation="Vertical">
								<TextBlock Text="company_name:" FontSize="12" TextWrapping="Wrap" Foreground="White"/>
								<TextBlock Text="{Binding name}" FontSize="15" TextWrapping="Wrap" Foreground="Black" Margin="20,0,0,0" />
							</StackPanel>
							<StackPanel Orientation="Vertical">
								<TextBlock Text="mission_statement:" FontSize="12" TextWrapping="Wrap" Foreground="White"/>
								<ScrollViewer
									VerticalScrollMode="Enabled"
									VerticalScrollBarVisibility="Hidden"
									HorizontalScrollMode="Disabled">
									<TextBlock Text="{Binding mission_statement}" FontSize="15" TextWrapping="Wrap" Foreground="Black" Margin="20,0,0,0" />
								</ScrollViewer>
							</StackPanel>
							<StackPanel Orientation="Vertical">
								<TextBlock Text="mission_statement_proof:" FontSize="12" TextWrapping="Wrap" Foreground="White"/>
								<TextBlock Text="{Binding mission_statement_proof}" FontSize="15" TextWrapping="Wrap" Foreground="Black" Margin="20,0,0,0" />
							</StackPanel>
							<StackPanel Orientation="Vertical">
								<TextBlock Text="mission_statement_inevestigator:" FontSize="12" TextWrapping="Wrap" Foreground="White"/>
								<TextBlock Text="{Binding mission_statement_investigator}" FontSize="15" TextWrapping="Wrap" Foreground="Black" Margin="20,0,0,0" />
							</StackPanel>
						</StackPanel>
					</Grid>
				</DataTemplate>
			</GridView.ItemTemplate>
		</GridView>
		<ScrollViewer Grid.Column="1" Grid.Row="4"
						VerticalScrollMode="Enabled"
						VerticalScrollBarVisibility="Hidden"
						HorizontalScrollMode="Disabled" BorderBrush="LightGray" BorderThickness="0">
				<TextBlock x:Name="TextBlockDump" TextWrapping="Wrap" FontSize="15" />
		</ScrollViewer>
	</Grid>

	<Page.BottomAppBar>
		<AppBar>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="50*"/>
					<ColumnDefinition Width="50*"/>
				</Grid.ColumnDefinitions>
				<!--<StackPanel x:Name="LeftPanel" Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left">
					
				</StackPanel>-->
				<StackPanel x:Name="RightPanel" Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
					<AppBarButton x:ConnectionId='2' x:Uid="Add" Icon="Add" Label="Add Company"                        />
					<AppBarButton x:Uid="Invig" Icon="Help" Label="Invigilate Mode"/>
					<AppBarSeparator/>
					<AppBarButton x:Uid="Refresh" Icon="Refresh" Label="Refresh"/>
				</StackPanel>
			</Grid>
		</AppBar>
	</Page.BottomAppBar>
</Page>

